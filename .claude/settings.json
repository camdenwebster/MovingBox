    "Bash(xcodebuild build:*)",
    "Bash(xcodebuild test:*)",
    "Bash(xcodebuild clean:*)",
    "Bash(xcodebuild archive:*)",
    "Bash(git add:*)",
    "Bash(git commit:*)",
    "Bash(git push:*)",
    "Bash(git pull:*)",
    "Bash(git checkout:*)",
    "Bash(git branch:*)",
    "Bash(git status:*)",
    "Bash(git diff:*)",
    "Bash(git log:*)",
    "Bash(git merge:*)",
