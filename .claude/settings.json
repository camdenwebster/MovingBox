{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(xcsift:*)",
      "Bash(git:*)",
      "Bash(swift:*)",
      "Bash(swiftc:*)",
      "Bash(xcode-select:*)",
      "Bash(fastlane:*)",
      "Bash(gh:*)",
      "Bash(ps:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(awk:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",
      "Bash(open:*)",
      "Bash(pkill:*)",
      "Bash(timeout:*)",
      "Bash(chmod:*)",
      "Bash(tee:*)",
      "Bash(bundle:*)",
      "Bash(gem:*)",
      "Bash(ruby:*)",
      "Bash(ruby -e:*)",
      "Bash(python3:*)",
      "Bash(xcodeproj show:*)",
      "Bash(pip3 list:*)",
      "Bash(xcresulttool get:*)",
      "Bash(bd:*)",
      "Bash(sed:*)",
      "Bash(cut:*)",
      "Bash(tr:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(which:*)",
      "Bash(type:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(killall:*)",
      "Bash(kill:*)",
      "Bash(defaults:*)",
      "Bash(plutil:*)",
      "Bash(sw_vers:*)",
      "Bash(uname:*)",
      "Bash(date:*)",
      "Bash(whoami:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(patch:*)",
      "Bash(tar:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(brew:*)",
      "Bash(python:*)",
      "mcp__ios-simulator__*",
      "mcp__sosumi__*",
      "mcp__context7__*",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "Resolve-Library-Id",
      "Query-Docs",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.sentry.io)",
      "WebFetch(domain:www.aiproxy.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:swiftpackageindex.com)",
      "WebSearch",
      "Skill(commit-commands:commit)",
      "Skill(pfw-structured-queries)",
      "Skill(pfw-sqlite-data)"
    ],
    "deny": [
      "Bash(rm:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledMcpjsonServers": [
    "sosumi",
    "sentry",
    "ios-simulator"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "source ~/.movingbox_env && bash ci_scripts/ci_post_clone.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "xcrun swift-format -i -r -p .",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "beads@beads-marketplace": true
  },
  "alwaysThinkingEnabled": true
}
