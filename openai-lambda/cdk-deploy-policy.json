{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "cloudformation:*",
                "s3:*",
                "iam:PassRole",
                "iam:GetRole",
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "lambda:*",
                "apigateway:*",
                "dynamodb:*",
                "secretsmanager:*"
            ],
            "Resource": "*"
        }
    ]
}
