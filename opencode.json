{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sosumi": {
      "type": "remote",
      "url": "https://sosumi.ai/mcp",
      "enabled": true
    },
    "mobile-mcp": {
      "type": "local",
      "command": ["npx", "-y", "@mobilenext/mobile-mcp@latest"],
      "enabled": true
    },
    "sentry": {
        "type": "local",
        "command": ["npx", "-y", "mcp-remote@latest", "https://mcp.sentry.dev/mcp"],
        "enabled": true
    }
  }
}
